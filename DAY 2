import javax.swing.*;
import java.awt.*;
class Tuesday
{
     public static void main(String [] rk)
     {
	JFrame jf = new JFrame();
	jf.setSize(600, 400);
	jf.setLocationRelativeTo(null);
	jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	
	//JFrame  => BorderLayout
	//JPanel   => FlowLayout
	
	JLabel jl = new JLabel("Lovely Profession University");
	JTextField t1 = new JTextField(50);
	JButton b1 = new JButton("Submit");
	JButton b2 = new JButton("Clear");
	
	JPanel p = new JPanel();
	p.setBackground(Color.CYAN);
	jf.add(p, BorderLayout.SOUTH);
	p.add(b1);   
	p.add(b2);
	jf.add(t1, BorderLayout.NORTH); 
  JPanel p2 = new JPanel();
	GridLayout gl = new GridLayout(0, 4);
	p2.setLayout(gl);
	for(int i=40; i >= 0; i--)
	{
		JButton b = new JButton(""+i);
		p2.add(b);
	}
		JButton b10 = new JButton(".");
		p2.add(b10);
		JButton b11 = new JButton("=");
		p2.add(b11);
	jf.add(p2);

/*
	ImageIcon ic = new ImageIcon("Background.jpg");
	JLabel l = new JLabel(ic);	
	jf.setContentPane(l);

	ImageIcon ic2 = new ImageIcon("car.jpg");	
	jf.setIconImage(ic2.getImage());
*/
	jf.setVisible(true); 
      }
}
